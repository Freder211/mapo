.theme-default-content:not(.custom) {
    max-width: 1000px;
}
img {
    background: #3eaf7c;
    border: 10px solid #3eaf7c;
    min-width: calc(100% - 20px);
    text-align: center;
    transform: translateX(-10px);
}
.sidebar-group.is-sub-group > .sidebar-heading {
    font-size: 1em !important;
}

.v-application {
    padding: 2rem;
    border: 10px solid #3eaf7c;
    table {
        border-collapse: unset;
        margin: unset;
        display: table;
        overflow-x: unset;
    }
    td, th {
        border: unset;
    }
    tr:nth-child(2n) {
        background-color: unset;
    }
    h2 {
        font-size: unset;
        padding-bottom: unset;
        border-bottom: unset;
    }
    .v-application--wrap {
        min-height: unset;
    }
}

.demo-and-code-wrapper .code-control {
    z-index: 0 !important;
}